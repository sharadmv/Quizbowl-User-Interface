<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my='urn:import:com.sharad.quizbowl.ui.client.widget'>
	<ui:style>
		.important {
			font-size: 20px;
			margin-right: 5px;
		}
	</ui:style>
	<g:LayoutPanel>
		<g:layer>
			<g:HorizontalPanel height="100%" width="100%">
				<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:VerticalPanel>
						<g:Label ui:field="title" />
						<g:HorizontalPanel>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:TextBox ui:field="searchBox" width="600px"
									styleName="{style.important}"></g:TextBox>
							</g:cell>
							<g:cell verticalAlignment="ALIGN_MIDDLE">
								<g:Image ui:field="loading"></g:Image>
							</g:cell>
						</g:HorizontalPanel>
						<g:cell horizontalAlignment="ALIGN_CENTER">
							<g:Button width="100px" ui:field="button">
							</g:Button>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_CENTER">
							<g:HorizontalPanel styleName="searchLinkPanel">
								<g:Anchor ui:field="advanced" styleName="searchLink">Advanced Search</g:Anchor>
								<g:Anchor ui:field="browse" styleName="searchLink">Browse</g:Anchor>

							</g:HorizontalPanel>
						</g:cell>
					</g:VerticalPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 